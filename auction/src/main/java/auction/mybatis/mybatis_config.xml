<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- 마이바티스 설정 -->
	<settings>
		<setting name="cacheEnabled" value="true"/>
		<setting name="autoMappingBehavior" value="FULL"/>
	</settings>
	
	<!-- 별칭등록 : 풀패키지 경로 대신 사용할 별명을 이곳에 구현 -->
	<typeAliases>
		<typeAlias type="auction.entity.Auction" alias="auction"/>
		<typeAlias type="auction.entity.View" alias="view"/>
		<typeAlias type="auction.entity.Search" alias="search"/>
		<typeAlias type="auction.entity.Paging" alias="paging"/>
	</typeAliases>
</configuration>


